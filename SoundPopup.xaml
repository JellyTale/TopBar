<Window x:Class="TopBar.SoundPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sound"
        Width="300" Height="350"
        WindowStartupLocation="Manual"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Deactivated="Window_Deactivated"
        MouseEnter="Window_MouseEnter"
        MouseLeave="Window_MouseLeave">

    <Border Background="#01000000"
            BorderBrush="{DynamicResource PopupAccent}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16,14">

        <StackPanel>
            <!-- Dark-themed slider style -->
            <StackPanel.Resources>
                <Style TargetType="Slider">
                    <Setter Property="Foreground" Value="{DynamicResource PopupFgNormal}" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Slider">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Border x:Name="TrackBackground"
                                            Grid.Row="1"
                                            Height="4"
                                            CornerRadius="2"
                                            Background="{DynamicResource PopupAccent}"
                                            Margin="5,0" />
                                    <Track Grid.Row="1" x:Name="PART_Track">
                                        <Track.Thumb>
                                            <Thumb Width="16" Height="16">
                                                <Thumb.Template>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Ellipse Fill="{DynamicResource PopupThumb}"
                                                                 Width="14" Height="14" />
                                                    </ControlTemplate>
                                                </Thumb.Template>
                                            </Thumb>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>
            <!-- Volume section -->
            <TextBlock Text="Volume"
                       Foreground="{DynamicResource PopupFgLabel}"
                       FontSize="11"
                       Margin="0,0,0,6" />

            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Speaker icon / mute toggle -->
                <Border Grid.Column="0"
                        Background="Transparent"
                        Cursor="Hand"
                        Padding="4"
                        CornerRadius="4"
                        MouseLeftButtonUp="MuteToggle_Click"
                        MouseEnter="MuteToggle_MouseEnter"
                        MouseLeave="MuteToggle_MouseLeave"
                        x:Name="MuteButton"
                        ToolTip="Mute / Unmute">
                    <Viewbox Width="16" Height="16">
                        <Canvas Width="24" Height="24">
                            <Path x:Name="SpeakerIcon"
                                  Fill="{DynamicResource PopupFgNormal}"
                                  Data="M3 9v6h4l5 5V4L7 9H3zm13.5 3A4.5 4.5 0 0014 8.3v7.4a4.47 4.47 0 002.5-3.7zM14 3.2v2.1a7 7 0 010 13.4v2.1A9 9 0 0014 3.2z" />
                        </Canvas>
                    </Viewbox>
                </Border>

                <Slider x:Name="VolumeSlider"
                        Grid.Column="1"
                        Minimum="0" Maximum="100"
                        VerticalAlignment="Center"
                        Margin="8,0"
                        ValueChanged="VolumeSlider_ValueChanged" />

                <TextBlock x:Name="VolumeLabel"
                           Grid.Column="2"
                           Foreground="{DynamicResource PopupFgNormal}"
                           FontSize="12"
                           Width="32"
                           TextAlignment="Right"
                           VerticalAlignment="Center" />
            </Grid>

            <!-- Separator -->
            <Border Background="{DynamicResource PopupSeparator}"
                    Height="1"
                    Margin="0,10" />

            <!-- Output device section -->
            <TextBlock Text="Output Device"
                       Foreground="{DynamicResource PopupFgLabel}"
                       FontSize="11"
                       Margin="0,0,0,6" />

            <ItemsControl x:Name="DeviceList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="DeviceItemBorder"
                                Background="{Binding BackgroundBrush}"
                                CornerRadius="4"
                                Padding="8,6"
                                Margin="0,1"
                                Cursor="Hand"
                                MouseLeftButtonUp="DeviceItem_Click"
                                MouseEnter="DeviceItem_MouseEnter"
                                MouseLeave="DeviceItem_MouseLeave">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           Foreground="{DynamicResource PopupFgBright}"
                                           FontSize="12"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                           Text="âœ“"
                                           Foreground="{DynamicResource PopupFgDim}"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Visibility="{Binding CheckVisibility}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</Window>
